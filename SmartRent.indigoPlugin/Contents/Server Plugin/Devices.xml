<?xml version="1.0"?>
<Devices>
    <Device type="thermostat" id="thermostat">
        <Name>Thermostat</Name>
        <ConfigUI>
            <Field type="checkbox" id="SupportsBatteryLevel" defaultValue="false" hidden="true" />
            <Field type="checkbox" id="SupportsStatusRequest" defaultValue="true" hidden="true" />
            <Field type="checkbox" id="SupportsOnState" defaultValue="false" hidden="true" />
            <Field type="checkbox" id="AllowOnStateChange" defaultValue="false" hidden="true" />

            <Field type="checkbox" id="SupportsHeatSetpoint" defaultValue="true" hidden="true" />
            <Field type="checkbox" id="SupportsCoolSetpoint" defaultValue="true" hidden="true" />
            <Field type="checkbox" id="SupportsHvacOperationMode" defaultValue="true" hidden="true" />
            <Field type="checkbox" id="SupportsHvacFanMode" defaultValue="true" hidden="true" />
            <Field type="checkbox" id="ShowCoolHeatEquipmentStateUI" defaultValue="true" hidden="true" />

            <Field type="textfield" id="NumTemperatureInputs" defaultValue="1" hidden="true" />
            <Field type="textfield" id="NumHumidityInputs" defaultValue="1" hidden="true" />

            <Field id="smartrent-device" type="menu">
                <Label>SmartRent Device:</Label>
                <List class="self" filter="thermostat" method="get_smartrent_devices"/>
            </Field>
        </ConfigUI>
        <States>
            <State id="online">
                <ValueType>Boolean</ValueType>
                <TriggerLabel>Online</TriggerLabel>
                <ControlPageLabel>Online</ControlPageLabel>
            </State>
        </States>
    </Device>

    <Device type="relay" id="lock" subType="kRelayDeviceSubType.Lock">
        <Name>Door Lock</Name>
        <ConfigUI>
            <Field type="checkbox" id="SupportsBatteryLevel" defaultValue="true" hidden="true" />
            <Field type="checkbox" id="SupportsStatusRequest" defaultValue="true" hidden="true" />
            <Field type="checkbox" id="SupportsOnState" defaultValue="false" hidden="true" />
            <Field type="checkbox" id="AllowOnStateChange" defaultValue="false" hidden="true" />

            <Field id="smartrent-device" type="menu">
                <Label>SmartRent Device:</Label>
                <List class="self" filter="lock" method="get_smartrent_devices"/>
            </Field>
        </ConfigUI>
        <States>
            <State id="online">
                <ValueType>Boolean</ValueType>
                <TriggerLabel>Online</TriggerLabel>
                <ControlPageLabel>Online</ControlPageLabel>
            </State>

            <State id="lockStatus">
                <ValueType>String</ValueType>
                <TriggerLabel>Status</TriggerLabel>
                <ControlPageLabel>Status</ControlPageLabel>
            </State>
        </States>
        <UiDisplayStateId>lockStatus</UiDisplayStateId>
    </Device>
</Devices>
