<?xml version="1.0"?>
<PluginConfig>
    <Field id="email" type="textfield">
        <Label>Email:</Label>
    </Field>

    <Field id="password" type="textfield" secure="true">
        <Label>Password:</Label>
    </Field>

    <Field id="tfa-secret" type="textfield" secure="true">
        <Label>2FA Secret:</Label>
    </Field>

    <Field id="tfa-secret-description" type="label" alignWithControl="true">
        <Label>This is NOT the generated 2FA code, but the secret used to configure a token generator.</Label>
    </Field>

    <Field id="check-tfa" type="button">
        <Label></Label>
        <Title>Check 2FA code</Title>
        <CallbackMethod>generate_2fa_code</CallbackMethod>
    </Field>

    <Field id="tfa-code" type="textfield" readonly="true">
        <Label>2FA code:</Label>
    </Field>

    <Field id="sep-1" type="separator" />

    <Field type="menu" id="log-level" defaultValue="info">
        <Label>Log level:</Label>
        <List>
            <Option value="debug">Debug (the most logging)</Option>
            <Option value="info">Info (standard logging)</Option>
            <Option value="warning">Warning (reduced logging)</Option>
        </List>
    </Field>
</PluginConfig>